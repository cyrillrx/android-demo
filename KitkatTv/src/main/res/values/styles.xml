<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!--
        Base application theme
    -->

    <style name="AppTheme" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="primary_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@drawable/primary_btn</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:padding">@dimen/medium_margin</item>
    </style>

    <style name="text_card_title">
        <item name="android:textSize">@dimen/text_card_title</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="text_card_subtext">
        <item name="android:textSize">@dimen/text_card_subtext</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="text_browse_screen_title">
        <item name="android:textSize">@dimen/text_browse_screen_title</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="text_browse_category_title">
        <item name="android:textSize">@dimen/text_browse_category_title</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="text_detail_content_title">
        <item name="android:textSize">@dimen/text_detail_content_title</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="text_detail_subtext">
        <item name="android:textSize">@dimen/text_detail_subtext</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

</resources>
